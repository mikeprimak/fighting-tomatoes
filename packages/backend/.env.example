# Database
DATABASE_URL="postgresql://dev:devpassword@localhost:5433/fighting_tomatoes_dev"

# Redis (optional)
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="1h"
REFRESH_TOKEN_EXPIRES_IN="7d"

# API Configuration
PORT=3001
NODE_ENV="development"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,exp://10.0.0.53:8081,http://10.0.0.53:8081"

# File Upload
MAX_FILE_SIZE="10mb"
UPLOAD_PATH="./uploads"

# Cloudflare R2 Image Storage (Optional - falls back to UFC.com URLs if not configured)
# Get these from Cloudflare Dashboard → R2 → Manage R2 API Tokens
R2_ENDPOINT="https://YOUR-ACCOUNT-ID.r2.cloudflarestorage.com"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="fightcrewapp-images"
# Optional: Custom domain for R2 bucket (e.g., https://images.fightcrewapp.com)
# If not set, will use R2 dev subdomain (https://fightcrewapp-images.r2.dev)
R2_PUBLIC_URL="https://pub-xxxxx.r2.dev"

# External APIs (for later)
# GOOGLE_CLIENT_ID="your-google-oauth-client-id"
# GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Giphy API (for GIF picker in comments)
GIPHY_API_KEY="your-giphy-api-key"