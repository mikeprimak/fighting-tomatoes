{
  "name": "@yourapp/backend",
  "version": "1.0.0",
  "description": "Node.js TypeScript backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist && rm -rf node_modules",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:reset": "prisma migrate reset --force"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@prisma/client": "^5.22.0",
    "@yourapp/shared": "workspace:*",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "fastify": "^5.6.0",
    "fastify-plugin": "^5.0.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "puppeteer": "^24.23.0",
    "redis": "^4.6.8",
    "serpapi": "^2.2.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.19.17",
    "@types/nodemailer": "^7.0.1",
    "@types/pg": "^8.15.5",
    "jest": "^29.6.2",
    "pino-pretty": "^13.1.1",
    "prisma": "^5.22.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^3.12.7",
    "typescript": "^5.9.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}